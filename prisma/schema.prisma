// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  ONG
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  role          Role     @default(ONG)
  created_at    DateTime @default(now())

  Ong Ong[]

  @@map("users")
}

model Ong {
  id          String   @id @default(uuid())
  title       String
  description String?
  phone       String
  address     String
  zip_code    Decimal
  latitude    Decimal
  longitude   Decimal
  created_at  DateTime @default(now())

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  Pet Pet[]

  @@map("ongs")
}
